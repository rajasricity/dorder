<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dorder.dorder" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>dOrder</name>
    <description>
        dOrder
    </description>
    <author email="sanarajasekhar@gmail.com" href="http://dOrder.com">
        Unified IT Services Pvt Ltd.,
    </author>
    <platform name="android">
    <icon src="resources/ldpi.png" density="ldpi" />
    <icon src="resources/mdpi" density="mdpi" />
    <icon src="resources/hdpi.png" density="hdpi" />
    <icon src="resources/xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
    <icon src="resources/ldpi.png" density="ldpi" />
    <icon src="resources/mdpi" density="mdpi" />
    <icon src="resources/hdpi.png" density="hdpi" />
    <icon src="resources/xhdpi.png" density="xhdpi" />
    </platform>

    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="resources/hdpil.png" density="land-hdpi"/>
    <splash src="resources/ldpil.png" density="land-ldpi"/>
    <splash src="resources/mdpil.png" density="land-mdpi"/>
    <splash src="resources/xhdpil.png" density="land-xhdpi"/>
</platform>
<preference name="SplashScreen" value="screen" />
<preference name="SplashScreenDelay" value="5000" />
    <content src="index.html" />
    <plugin name="cordova-plugin-splashscreen" spec="4.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="geo:*" />
     <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>